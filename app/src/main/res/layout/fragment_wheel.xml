<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".views.WheelFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center_horizontal"
        android:orientation="vertical"
        android:textAlignment="center">

        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_height="100dp" />

        <TextView
            android:id="@+id/wheel_tv"
            android:layout_width="match_parent"
            android:layout_height="54dp"
            android:text="Ratas"
            android:textAlignment="center"
            android:textColor="@color/black"
            android:textSize="30sp" />

        <ImageView
            android:id="@+id/wheel_iv"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:src="@drawable/_037785_200" />

        <TextView
            android:id="@+id/explain_tv"
            android:layout_width="match_parent"
            android:layout_height="33dp"
            android:text="Norint gauti tvarios veiklos kategoriją, spauskite mygtuką"
            android:textAlignment="center"
            android:textColor="@color/black" />

        <Button
            android:id="@+id/wheel_b"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/roundcorner"
            android:text="Sukti ratą"
            android:textAlignment="center" />

        <TextView
            android:id="@+id/textView7"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" />

    </LinearLayout>

</FrameLayout>